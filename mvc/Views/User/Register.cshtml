@* @model MasterProject.MVC.Models.User *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Task Login Page</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #0a55a6;
            color: #fff;
            text-align: center;
            padding: 10px;
        }

        .card-body {
            padding: 20px;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .btn-primary {
            background-color: #0a55a6;
            border-color: #0a55a6;
        }

        .btn-primary:hover {
            background-color: #007bff;
            border-color: #007bff;
        }

        .text-center a {
            color: #007bff;
            text-decoration: none;
        }

        .text-center a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-4">Login</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login">
                            <div class="form-group">
                                <label for="email">User Name:</label>
                                <input type="email" asp-for="c_uname" class="form-control" id="c_uname" name="c_uname" required>
                            </div>
                            
                             <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" asp-for="c_uemail" class="form-control" id="email" name="c_uemail" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input asp-for="c_password" type="password" class="form-control" id="password" name="c_password" required>
                            </div>
                             <div class="form-group">
                                <label for="email">Confirm password:</label>
                                <input type="password" asp-for="c_cpassword" class="form-control" id="c_cpassword" name="c_cpassword" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </form>
                        @* <p class="mt-3 text-center">Don't have an account? <a href="~/User/Register">Register here</a></p> *@
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>